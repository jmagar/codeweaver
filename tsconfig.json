{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@codeweaver/api/*": ["packages/api/src/*"],
      "@codeweaver/db/*": ["packages/db/src/*"],
      "@codeweaver/lib/*": ["packages/lib/src/*"],
      "@codeweaver/ui/*": ["packages/ui/src/*"],
      "@codeweaver/tsconfig/*": ["tooling/tsconfig/*"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    { "path": "./apps/web" },
    { "path": "./packages/api" },
    { "path": "./packages/db" },
    { "path": "./packages/lib" },
    { "path": "./packages/ui" }
  ]
}
