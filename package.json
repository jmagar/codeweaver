{
  "packageManager": "pnpm@10.11.1",
  "name": "codeweaver-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "pnpm run clean:artifacts && pnpm run clean:modules && pnpm install && turbo build",
    "clean:artifacts": "find . -type d \\( -name 'dist' -o -name '.next' -o -name '.turbo' \\) -not -path './node_modules/*' -exec rm -rf {} +",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write .",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "db:generate": "pnpm --filter @codeweaver/db db:generate",
    "db:push": "pnpm --filter @codeweaver/db db:push",
    "db:studio": "pnpm --filter @codeweaver/db db:studio"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "prettier": "^3.6.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "eslint": "^9.30.1",
    "turbo": "^2.5.4",
    "@types/node": "^24.0.10"
  }
}
